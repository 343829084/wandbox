#compiler {
}
#compile-options > div {
  display: none;
}
#compile-options > .selected {
  display: block;
}
#compiler option {
  padding-left: 20px;
}
.option-raw .CodeMirror {
  border: 1px solid #888;
  min-height: 50px;
  height: auto;
}
.option-raw .CodeMirror-scroll {
  overflow-y: hidden;
  overflow-x: auto;
}
.select2-results {
  min-height: 300px;
  max-height: none;
  overflow-y: hidden;
  overflow-x: auto;
  height: auto;
}
